<h1>Регистрация</h1>
<p>Заполните форму</p>

<%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label 'Логин' %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label 'Эл.почта' %><br>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label 'Пароль' %><br>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit 'Зарегистрироваться' %>
    </div>
<% end %>
